<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h3>Add a new Customer</h3>
      <form action="/customer/new" method="post">
        <div class="form-group">
          <input type="text" name="name" class="form-control" id="c_name" placeholder="Customer Name">
        </div>
        <button type="submit" class="btn btn-danger">Create</button>
      </form>
    </div>
    <div class="col-sm-6">
      <h3> Add a Movie to the Database </h3>
      <form action="/movie/new" method="post">
        <div class="form-group">
          <input class="form-control "type="text" name="title" placeholder="Movie Title">
        </div>
        <div class="form-group">
          <input class="form-control "type="text" name="name" placeholder="Actor's Name">
        </div>
        <button type="submit" class="btn btn-danger">Go</button>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <ul>
        <% if @customers.any? %>
          <% @customers.each() do |customer| %>
          <li><a href="/customer/<%= customer.id %>"><%= customer.name %></a></li>
          <% end %>

        <% else %>

          <h3> There are no Customers yet. Do some advertising...</h3>

        <% end %>
      </ul>
    </div>
    <div class="col-sm-6">
      <ul>
        <% if @in_stock.any? %>
          <% @in_stock.each() do |movie| %>
          <li><a href="/movie/<%= movie.id %>"><%= movie.title %></a></li>
          <% end %>

        <% else %>

          <h3> All movies are checked out.</h3>

        <% end %>
      </ul>
    </div>
  </div>
</div>
