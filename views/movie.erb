<h1><%= @movie.title %></h1>
<div class="container">
  <div class="row">
    <div class="col-sm-5">

      <h3>Actors:</h3>
      <ul>
        <% if @cast.any? %>
          <% @cast.each() do |actor| %>
          <li><%= actor.name %></a></li>
          <% end %>

        <% else %>
          <p> This movie has no actors. It must be a nature documentary.</p>
        <% end %>
      </ul>


      <form action="/movie/<%= @movie.id %>" method="post">
        <input type="hidden" name="_method" value="patch">
        <div class="form-group">
          <h4>Update Title</h4>
          <input type="text" name="title" placeholder="New title" class="form-control">
        </div>

        <input type="hidden" name="_method" value="patch">
        <h4>Add an actor</h4>
        <div class="form-group">
          <input type="text" name="name" placeholder="Actor name" class="form-control">
        </div>
        <button type="submit" class="btn btn-danger">Add Actor</button>
      </form>
        <form action="/movie/<%= @movie.id %>/delete" method="post">
          <div class="form-group">
            <input type="hidden" name="_method" value="delete">
          </div>
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>

    </div>
  </div>
</div>
